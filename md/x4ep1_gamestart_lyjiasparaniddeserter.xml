<?xml version="1.0" encoding="utf-8"?>
<mdscript name="x4ep1_gamestart_lyjias_paranid_deserter" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="md.xsd">
	<cues>
		<cue name="LyjiasParanidDeserterStart" module="x4ep1_gamestart_lyjias_paranid_deserter">
      <conditions>
        <event_cue_signalled cue="md.Setup.GameStart" />
      </conditions>
      <actions>
        <set_faction_known faction="faction.argon" known="true"/>
        <set_faction_known faction="faction.teladi" known="true"/>
        <set_faction_known faction="faction.antigone" known="true"/>
        <set_faction_known faction="faction.ministry" known="true"/>
        <set_faction_known faction="faction.alliance" known="true" />
        <set_faction_known faction="faction.hatikvah" known="true" />
        <set_faction_known faction="faction.holyorder" known="true" />
        <set_faction_known faction="faction.scaleplate" known="true" />
        <set_faction_known faction="faction.xenon" known="true" />
        <set_faction_known faction="faction.khaak" known="true" />

        <set_faction_relation faction="faction.player" otherfaction="faction.holyorder" value="-1.0"/>
        <set_faction_relation faction="faction.holyorder" otherfaction="faction.player" value="-1.0"/>

        <set_faction_relation faction="faction.player" otherfaction="faction.paranid" value="-0.75"/>
        <set_faction_relation faction="faction.paranid" otherfaction="faction.player" value="-0.75"/>

        <set_faction_relation faction="faction.player" otherfaction="faction.alliance" value="-0.01"/>
        <set_faction_relation faction="faction.alliance" otherfaction="faction.player" value="-0.01"/>

        <!-- Paranid civil war -->
        <set_faction_relation faction="faction.holyorder" otherfaction="faction.paranid" value="-0.5"/>
        <set_faction_relation faction="faction.paranid" otherfaction="faction.holyorder" value="-0.5"/>

        <install_software object="player.ship" software="ware.software_dockmk2" />

        <!-- Add NPCs to Player Ship -->
        <find_ship name="$PlayerShip" owner="faction.player" space="player.zone" multiple="false" />
        <do_all exact="1" counter="$j">
            <create_control_entity name="$NewCrew" object="$PlayerShip" post="controlpost.engineer">
                <select race="[race.paranid]" tags="tag.marine"/>
                <owner exact="faction.player"/>
            </create_control_entity>

            <set_skill entity="$NewPilot" type="skilltype.piloting" exact="10" />
            <set_skill entity="$NewPilot" type="skilltype.engineering" exact="5" />
        </do_all>
        
        <!-- Create some pursuers -->
        <generate_loadout macro="macro.ship_arg_s_heavyfighter_02_a_macro" faction="faction.argon"
        wares="[ware.software_flightassistmk1, ware.software_dockmk2, ware.software_scannerlongrangemk2, ware.software_scannerobjectmk2, ware.software_targetmk1, ware.software_trademk1, ware.engine_arg_s_travel_01_mk3, ware.weapon_gen_s_gatling_01_mk2, ware.shield_arg_s_standard_01_mk3, ware.thruster_gen_s_combat_01_mk3]"
        level="1" result="$loadout" />
        <do_all exact="5" counter="$i">
            <create_ship name="$NewShip" macro="ship_arg_s_heavyfighter_02_a_macro" zone="player.zone">
                <owner exact="faction.paranid" overridenpc="true" />
                <loadout loadout="$loadout.{1}" />
                <pilot >
                    <select faction="faction.paranid" tags="tag.aipilot"/>
                </pilot>
                <people>
                    <fillpercent exact="100" />
                    <person role="service" weight="50">
                        <select faction="faction.paranid" tags="tag.crew"/>
                    </person>
                    <person role="marine" weight="50">
                        <select faction="faction.paranid" tags="tag.marine"/>
                    </person>
                </people>
                <safepos object="player.ship" radius="5km" min="5km" max="10km"/>
            </create_ship>
            <set_skill entity="$NewShip.pilot" type="skilltype.piloting" exact="10" />
            <set_skill entity="$NewShip.pilot" type="skilltype.engineering" exact="5" />
        </do_all>

        <!-- TODO: Create some ships raising hell in Holy Order space -->

        <!-- TODO: Create some stations to help Paranid/HOP war efforts -->

      </actions>
    </cue>
	</cues>
</mdscript>
